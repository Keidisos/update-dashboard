# Application
SECRET_KEY=your-secret-key-change-in-production
PORT=8081
DEBUG=false

# Discord Notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# Database
DATABASE_URL=sqlite:///./data/update_dashboard.db

# SSH Configuration (optional - can also be configured per-host in UI)
# SSH_KEY_PATH=/app/.ssh/id_rsa

# Auto-Update Scheduler
AUTO_CHECK_ENABLED=true
AUTO_CHECK_INTERVAL_MINUTES=60
AUTO_UPDATE_CONTAINERS=false
AUTO_UPDATE_SYSTEM=false

# SOC (Security Operations Center)
SOC_ENABLED=true
SOC_PASSWORD=change-me-in-production

# SOC Phase 2 Configuration
SOC_ANALYSIS_INTERVAL=15          # Minutes between auto-analysis
SOC_SCHEDULER_ENABLED=true        # Auto-start scheduler on boot
SOC_CONTAINER_LOGS_ENABLED=true   # Analyze container logs
SOC_CORRELATION_ENABLED=true      # Enable incident correlation
SOC_CORRELATION_WINDOW=60         # Minutes for correlation window

# Ollama Configuration
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=cybersec

# Discord Notifications
DISCORD_WEBHOOK_URL=              # Discord webhook URL
DISCORD_NOTIFY_SEVERITY=critical,high
DISCORD_ENABLED=true
